// logstash.template.combined.json
{
    "index_patterns": ["nginx-*"],
    "settings": {
      "number_of_shards": 1
    },
    "mappings": {
      "_source": {
        "enabled": true
      },
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "client_ip": {
          "type": "ip"
        },
        "user": {
          "type": "keyword"
        },
        "http_method": {
          "type": "keyword"
        },
        "url": {
          "type": "keyword"
        },
        "http_version": {
          "type": "keyword"
        },
        "status_code": {
          "type": "short"
        },
        "response_size": {
          "type": "integer"
        },
        "referrer": {
          "type": "keyword"
        },
        "user_agent": {
          "type": "text"
        },
        "log_type": {
          "type": "keyword"
        },
        "error_message": {
          "type": "text"
        }
        // Add other fields specific to your logs
      }
    }
  }
  